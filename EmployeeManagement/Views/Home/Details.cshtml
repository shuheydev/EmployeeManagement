@model HomeDetailsViewModel

@{
    ViewBag.Title = "Employee Details";
    var photoPath = "~/images/" + (Model.Employee.PhotoPath ?? "image1.jpg");
}

<h3>@Model.PageTitle</h3>

<div class="card-body text-center">
    <img class="card-img-top" src="@photoPath" asp-append-version="true" />

    <h4>Name: @Model.Employee.Name</h4>
    <h4>Email: @Model.Employee.Email</h4>
    <h4>Department: @Model.Employee.Department</h4>
</div>
<div class="card-footer text-center">
    <a asp-action="details" asp-controller="home" asp-route-id="@Model.Employee.Id" class="btn btn-primary m-1">Details</a>
    <a asp-action="edit" asp-controller="home" asp-route-id="@Model.Employee.Id" class="btn btn-primary m-1">Edit</a>
</div>


@section Scripts{
    <script src="~/js/CustomScript.js"></script>
}