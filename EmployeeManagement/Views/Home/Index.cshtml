@model IEnumerable<Employee>

@{
    ViewBag.Title = "Employee Index";
}

<table>
    <thead>
        <tr>
            <th>ID</th>
            <th>Name</th>
            <th>Department</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var employee in Model)
        {
            var photoPath = "~/images/" + (employee.PhotoPath ?? "image1.jpg");
            <tr>
                <td>
                    <img class="card-img-top" src="@photoPath"
                         asp-append-version="true" />
                </td>
                <td>@employee.Name</td>
                <td>
                    <div class="card-footer text-center">
                        @employee.Department
                        <a asp-action="details" asp-controller="home" asp-route-id="@employee.Id" class="btn btn-primary m-1">Details</a>
                        <a asp-action="edit" asp-controller="home" asp-route-id="@employee.Id" class="btn btn-primary m-1">Edit</a>
                    </div>
                </td>

            </tr>
        }

    </tbody>
</table>
