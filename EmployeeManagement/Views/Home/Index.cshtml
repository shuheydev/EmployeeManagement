@model IEnumerable<Employee>

@{
    ViewBag.Title = "Employee Index";
}

<table>
    <thead>
        <tr>
            <th>ID</th>
            <th>Name</th>
            <th>Department</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var employee in Model)
        {
            <tr>
                <td>@employee.Id</td>
                <td>@employee.Name</td>
                <td>
                    @employee.Department
                    <a asp-action="details" asp-controller="home" asp-route-id="@employee.Id" class="btn btn-primary">TagHelper</a>
                    <a href="@Url.Action("details", "home", new { id = employee.Id })" class="btn btn-danger">Urlクラス</a>
                </td>

            </tr>
        }

    </tbody>
</table>
