@model IEnumerable<Employee>

@{
    ViewBag.Title = "Employee Index";
}

<table>
    <thead>
        <tr>
            <th>ID</th>
            <th>Name</th>
            <th>Department</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var employee in Model)
        {
            <tr>
                <td>
                    <img class="card-img-top" src="~/images/image1.jpg"
                         asp-append-version="true" />
                </td>
                <td>@employee.Name</td>
                <td>
                    <div class="card-footer text-center">
                        @employee.Department
                        <a asp-action="details" asp-controller="home" asp-route-id="@employee.Id" class="btn btn-primary m-1">TagHelper</a>
                        <a href="@Url.Action(" details", "home" , new { id=employee.Id })" class="btn btn-danger m-1">Urlクラス</a>
                    </div>
                </td>

            </tr>
        }

    </tbody>
</table>
